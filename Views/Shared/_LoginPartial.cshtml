@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item" >
        <a id="manage" class="nav-link nav-custom" style="margin:0px;color: black !important" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-danger border-0 nav-custom">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a style="margin:0px;color: black !important" class="nav-link text-dark nav-custom" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a style="margin:0px;color: black !important" class="btn btn-primary nav-custom" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
