@model TASM.Models.Agenda

@{
    ViewData["Title"] = "Delete Agenda";
}

<div class="container py-4" style=" border-radius: 10px; margin-top: 20px;">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg border-0">
                <div class="card-header text-white d-flex justify-content-between align-items-center" style="background-color: #0779E4; border-radius: 5px 5px 0 0;">
                    <h2 class="mb-0 py-2">Delete Agenda</h2>
                    <span class="badge bg-danger">Caution</span>
                </div>
                <div class="card-body" style="background-color: white;">
                    <div class="alert alert-warning">
                        <h5>Are you sure you want to delete this agenda item?</h5>
                        <p>This action cannot be undone.</p>
                    </div>

                    <div class="p-3 mb-3" style="background-color: rgba(239, 243, 198, 0.3); border-radius: 6px;">
                        <dl class="row mb-0">
                            <dt class="col-sm-3 text-end" style="color: #4CBBB9;">
                                Lab name
                            </dt>
                            <dd class="col-sm-9">
                                @ViewBag.LabName
                            </dd>
                            <dt class="col-sm-3 text-end" style="color: #4CBBB9;">
                                @Html.DisplayNameFor(model => model.TopicName)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.TopicName)
                            </dd>

                            <dt class="col-sm-3 text-end" style="color: #4CBBB9;">
                                @Html.DisplayNameFor(model => model.Resources)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Resources)
                            </dd>


                            
                        </dl>
                    </div>

                    <form asp-action="Delete" class="d-flex justify-content-between mt-4">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn text-white" style="background-color: #77D8D8;">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Confirm Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>