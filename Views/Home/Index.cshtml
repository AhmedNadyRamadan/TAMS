@using Microsoft.AspNetCore.Identity
@model TASM.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <!-- Main Section -->
    <main>
        <div class="container my-5">
            <h2 class="text-center text-primary mb-4">Dashboard</h2>

            <!-- Cards for Dashboard Stats -->
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card text-white" style="background-color: #4cbbb9;">
                        <div class="card-body">
                            <h5 class="card-title">Total Labs</h5>
                            <p class="card-text fs-4">@Model.LabsThisWeek</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card text-white" style="background-color: #4cbbb9;">
                        <div class="card-body">
                            <h5 class="card-title">Upcoming Sessions</h5>
                            <p class="card-text fs-4">@Model.UpcomingSessions</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card text-white" style="background-color: #4cbbb9;">
                        <div class="card-body">
                            <h5 class="card-title">Attendance Rate</h5>
                            <p class="card-text fs-4">@Model.AttendanceRate%</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Next Meeting Section -->
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="alert alert-info" role="alert">
                        <h4 class="alert-heading">Next Meeting</h4>
                        <p>@Model.NextMeeting</p>
                    </div>
                </div>
            </div>

            </div>
        </div>
    </main>
   
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
