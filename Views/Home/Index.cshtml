@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model TASM.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">Welcome to TAMS</h1>
        <p class="lead text-muted">
            Your centralized Teaching Assistant Management System to help you stay organized, efficient, and connected.
        </p>
    </div>

    @if (SignInManager.IsSignedIn(User))
    {
        
            var message = TempData["Message"] as string;
            var joinUrl = TempData["JoinUrl"] as string;

            if (!string.IsNullOrEmpty(message))
            {
                <div class="alert alert-success" role="alert">
                    @message
                </div>
            }

            if (!string.IsNullOrEmpty(joinUrl))
            {
                <div class="alert alert-info" role="alert">
                    Your meeting has been created successfully! You can join the meeting using the following link:
                    <a href="@joinUrl" target="_blank" class="btn btn-primary">Join Meeting</a>
                </div>
            }
        
        <!-- Cards for Dashboard Stats -->
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card text-white" style="background-color: #4cbbb9;">
                    <div class="card-body">
                        <h5 class="card-title">Total Labs</h5>
                        <p class="card-text fs-4">@Model.LabsThisWeek</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-white" style="background-color: #4cbbb9;">
                    <div class="card-body">
                        <h5 class="card-title">Upcoming Sessions</h5>
                        <p class="card-text fs-4">@Model.UpcomingSessions</p>
                    </div>
                </div>
            </div>

        <div class="col-md-4">
            <div class="card text-white" style="background-color: #4cbbb9;">
                <div class="card-body">
                    <h5 class="card-title">Attendance Rate</h5>
                    <p class="card-text fs-4">@Model.AttendanceRate</p>
                </div>
            </div>
        </div>
            @* <div class="col-md-4">
                <a asp-controller="Courses" asp-action="Index" class="text-decoration-none">
                    <div class="card shadow-sm text-dark" style="background-color: #eff3c6;">
                        <div class="card-body text-center">
                            <h5 class="card-title">Course Dashboard</h5>
                           
                        </div>
                    </div>
                </a>
            </div> *@

        </div>
        <!-- Next Meeting Section -->
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="alert alert-info" role="alert">
                    <h4 class="alert-heading">Next Meeting</h4>
                    <p>@Model.NextMeeting</p>
                </div>
            </div>
        </div>
    }else{
        <partial name="_LoginPartial" />
    }
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
