@model IEnumerable<TASM.Models.Agenda>

@{
    ViewData["Title"] = "Agenda List";
}

<div class="container py-4" style=" border-radius: 10px; margin-top: 20px;">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="display-5" style="color: #0779E4;">Agenda List: @ViewBag.LabName</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn text-white" style="background-color: #0779E4;">
                <i class="bi bi-plus-circle"></i> Create New Agenda
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0" style="background-color: white; border-radius: 8px;">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead style="background-color: #4CBBB9; color: white;">
                        <tr>
                            <th style="border-top-left-radius: 8px;">
                                Topic name
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Resources)
                            </th>
                           
                            
                            <th style="border-top-right-radius: 8px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TopicName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Resources)
                                </td>
                                
                                
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: #77D8D8; color: white;">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: #4CBBB9; color: white;">
                                            <i class="bi bi-info-circle"></i> Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>