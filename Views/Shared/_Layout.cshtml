<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - TAMS</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Auth9.styles.css" asp-append-version="true" />
	<link rel="icon" href="~/images/favicon.ico" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ZvpUoO/+PpD/0X2WVZgAFH4QSyPDozI6yZz5f9z5JOoU5AOdlNfgG2wK4A9UQbsf" crossorigin="anonymous">
</head>
<body>
	<header>
		<!-- New Navigation Bar with Logo and Pages -->
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #0779e4;">
            <div class="container">
                <!-- Logo and Brand Name -->
                <a class="navbar-brand d-flex align-items-center" href="#">
                    <img src="/images/logo.avif"
                         alt="TAMS Logo"
                         width="60"
                         height="60"
                         class="rounded-circle me-2"
                         style="object-fit: cover; margin-top: -5px;">
                    <span class="fs-4 fw-bold text-white">TAMS</span>
                </a>

                <!-- Mobile Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Links -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link nav-custom active" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-custom" href="#">Labs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-custom" href="#">Agendas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-custom" href="#">Meetings</a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>

	</header>

	<div class="container">
		@RenderBody()
	</div>

	@* <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div> *@

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
