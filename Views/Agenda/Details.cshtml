@model TASM.Models.Agenda

@{
    ViewData["Title"] = "Agenda Details";
}

<div class="container py-4" style=" border-radius: 10px; margin-top: 20px;">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg border-0">
                <div class="card-header text-white" style="background-color: #0779E4; border-radius: 5px 5px 0 0;">
                    <h2 class="mb-0 py-2">Agenda Details</h2>
                </div>
                <div class="card-body" style="background-color: white;">
                    <div class="p-3 mb-3" style="background-color: rgba(119, 216, 216, 0.1); border-radius: 6px; border-left: 4px solid #4CBBB9;">
                        <dl class="row mb-0">
                            <dt class="col-sm-3 text-end" style="color: #4CBBB9;">
                                Lab name

                            </dt>
                            <dd class="col-sm-9">
                                @ViewBag.LabName
                            </dd>
                            <dt class="col-sm-3 text-end" style="color: #4CBBB9;">
                                Topic name
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.TopicName)
                            </dd>

                            <dt class="col-sm-3 text-end" style="color: #4CBBB9;">
                                @Html.DisplayNameFor(model => model.Resources)
                            </dt>
                            <dd class="col-sm-9">
                                @ViewData["Resources"]
                            </dd>


                        </dl>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn text-white" style="background-color: #77D8D8;">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn text-white" style="background-color: #0779E4;">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>